<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restourant.Web</title>

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navigation">
            <ul class="left-items">
                <li>
                    <a asp-controller="Home" asp-action="Index">Restourant Web App</a>
                </li>
                <li>
                    <a asp-area="Products" asp-controller="Products" asp-action="All">Menu</a>
                </li>
                <li>
                    <a asp-area="Tables" asp-controller="Tables" asp-action="All">Active Tables</a>
                </li>
                @if (this.User.Identity.IsAuthenticated)
                 {
                    @if (this.User.IsInRole("Admin"))
                     {
                        <li>
                            Manage Employees
                        </li>
                        <li>
                            Ban user
                        </li>
                     }
                    else if (this.User.IsInRole("Staff"))
                    {
                        <li>
                            Register Table
                        </li>
                        <li>
                            Cuurently Active Tables for Employee
                        </li>
                    }
                 }
            </ul>
            <ul class="right-items">
                @if (this.User.Identity.IsAuthenticated)
                {
                    <li>
                        <a asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                    <li>
                        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </li>
                }
            </ul>
        </nav>
    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - Restourant.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    </environment>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
